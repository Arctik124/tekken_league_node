<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Register Battle
            </h1>
            <%- include ('../partials/messages') %>
                <form action="/battle" method="POST">
                    <div class="row xs-5">
                        <div class="col-md-6">
                            <label for="player1">Player 1</label>
                            <p>
                                <%= user.name %>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label for="player2">Player 2</label>
                            <select class="form-select" id="player2" name="player2">
                        
                            <% player2.forEach(player => { %>
                             <option><%= player.name %> </option>
                            <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="ft">First to: </label>
                        <input type="number" id="max_score" name="max_score" class="form-control" placeholder="0" />
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Register Battle</button>
                </form>
        </div>
    </div>
</div>